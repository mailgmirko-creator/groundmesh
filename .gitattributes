* text=auto

# Windows-friendly scripts keep CRLF for PS; everything else default LF
*.ps1 text eol=crlf
*.bat text eol=crlf

# Common code/text keep LF (nice in Actions/Linux)
*.py  text eol=lf
*.sh  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md  text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js  text eol=lf
*.ts  text eol=lf
